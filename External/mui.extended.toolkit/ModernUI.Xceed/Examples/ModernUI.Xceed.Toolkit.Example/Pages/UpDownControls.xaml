            <xctk:ShortUpDown Watermark="Short Up/Down Example..." Margin="2" />
            <xctk:SingleUpDown Watermark="Single Up/Down Example..." Margin="2" />
            <xctk:DateTimeUpDown Watermark="DateTime Up/Down Example..." Margin="2" />
            <xctk:TimeSpanUpDown Watermark="TimeSpan Up/Down Example..." Margin="2" />
            <xctk:CalculatorUpDown Watermark="Calculator Up/Down Example..." Margin="2" />
