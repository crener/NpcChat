<UserControl x:Class="ModernUI.Xceed.Toolkit.Example.Pages.ColorControls"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit">

    <ScrollViewer>
        <StackPanel>
            <xctk:ColorCanvas Margin="2" SelectedColor="{DynamicResource AccentColor}" />
            <xctk:ColorPicker Margin="2" SelectedColor="{DynamicResource AccentColor}" />
        </StackPanel>
    </ScrollViewer>
</UserControl>