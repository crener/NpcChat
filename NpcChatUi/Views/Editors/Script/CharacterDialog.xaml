<UserControl x:Class="NpcChat.Views.Editors.Script.CharacterDialog"
             x:Name="DialogElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" d:DesignWidth="800" Height="30">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!--View mode components-->
        <Label Content="{Binding DialogSegment.CharacterId, Mode=OneWay}" VerticalAlignment="Center" Grid.Column="0" />
        <TextBlock Text="{Binding DialogSegment.Text}" VerticalAlignment="Center" Grid.Column="1" />
    </Grid>
</UserControl>
