<mui:ModernWindow  x:Class="NpcChat.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mui="http://firstfloorsoftware.com/ModernUI"
        xmlns:data="clr-namespace:NpcChat.ViewModels.Editors.Script"
        xmlns:script="clr-namespace:NpcChat.Views.Editors.Script"
        xmlns:dialogTreeItems="clr-namespace:NpcChatSystem.Data.Dialog.DialogTreeItems;assembly=NpcChatSystem"
        mc:Ignorable="d"
        Title="Npc Chat" 
        Height="350" Width="525"
        MinHeight="120" MinWidth="300"

        Style="{DynamicResource BlankWindow}"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Menu>
            <MenuItem Header="File">
                <MenuItem Header="Open"/>
                <MenuItem Header="Close"/>
                <MenuItem Header="Save"/>
            </MenuItem>
        </Menu>

        <StackPanel Grid.Row="1" Margin="5">
            <!--<Grid VerticalAlignment="Top" Height="26">
                <Grid.RowDefinitions>
                    <RowDefinition MaxHeight="20" Height="20"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Label Content="Story Elements" Grid.RowSpan="2" Margin="0"/>
            </Grid>-->

            <ListView ItemsSource="{Binding Branches}" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.CanContentScroll="false">
                <ListView.ItemTemplate>
                    <DataTemplate DataType="data:TreePartVM">
                        <StackPanel>
                            <TextBox Text="{Binding DialogTree.Name}"/>

                            <ListView ItemsSource="{Binding Speech}" Margin="5" SelectionMode="Single" ItemContainerStyle="{StaticResource DialogItemBoxStyle}"
                                      ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.CanContentScroll="false" >
                                <ListView.Resources>
                                    <DataTemplate DataType="{x:Type data:CharacterDialogVM}">
                                        <script:CharacterDialog/>
                                    </DataTemplate>
                                </ListView.Resources>
                            </ListView>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!--<Button Grid.Column="0" Margin="5,3">Add Dialog</Button>-->
                <Button Grid.Column="0" Margin="5,3">Add Branch</Button>
            </Grid>
        </StackPanel>
    </Grid>
</mui:ModernWindow>
