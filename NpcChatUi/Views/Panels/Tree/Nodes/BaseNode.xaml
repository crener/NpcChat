<UserControl x:Class="NpcChat.Views.Panels.Tree.Nodes.BaseNode"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:NpcChat.Views"
             mc:Ignorable="d"
             Width="150" Height="82">
    <Grid VerticalAlignment="Top" Margin="0">
        <Rectangle Fill="{Binding BackGroundColour}" Stroke="Orange" Height="60" />
        <Polygon Points="0,0 15,20 30,0" Stroke="Orange" Fill="{Binding BackGroundColour, Mode=OneTime}" Margin="5,60,85,-21"/>
    </Grid>
</UserControl>