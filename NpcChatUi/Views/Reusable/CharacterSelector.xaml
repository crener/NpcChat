<UserControl x:Class="NpcChat.Views.Reusable.CharacterSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NpcChat.Views.Reusable"
             mc:Ignorable="d" 
             Height="30" d:DesignWidth="130">
    <Grid>
        <ComboBox IsEditable="False" IsReadOnly="True" ItemsSource="{Binding Names, Mode=OneWay}" 
                  SelectedValuePath="Id" DisplayMemberPath="Name" SelectedValue="{Binding SelectedCharacter}">
        </ComboBox>
    </Grid>
</UserControl>
