<UserControl x:Class="NpcChat.Views.About.AboutPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NpcChat.Views.About"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Vertical">
        <TextBlock FontSize="16" TextAlignment="Center">
            Npc Chat was created by 
            <Hyperlink Command="{Binding OpenBrowserCommand}" CommandParameter="https://martinkruger.me">Martin Kruger</Hyperlink> 
            in 2019 and made <Hyperlink Command="{Binding OpenBrowserCommand}" CommandParameter="https://github.com/crener/NpcChat"> available via Github</Hyperlink>.
        </TextBlock>
    </StackPanel>
</UserControl>
