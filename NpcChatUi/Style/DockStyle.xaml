<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:NpcChat.Style"
                    xmlns:xcad="http://schemas.xceed.com/wpf/xaml/avalondock">

    <Style TargetType="{x:Type TabItem}">
        <Setter Property="Background" Value="{DynamicResource GeneralBackground}"/>
        <Setter Property="TextElement.Foreground" Value="{DynamicResource GeneralText}"/>
    </Style>

    <Style TargetType="{x:Type xcad:LayoutDocumentPaneControl}">
        <Setter Property="Background" Value="{DynamicResource GeneralBackground}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource GeneralBackground}"/>
    </Style>

    <Style TargetType="{x:Type xcad:LayoutDocumentControl}">
        <Setter Property="Background" Value="{DynamicResource GeneralBackground}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource GeneralBackground}"/>
    </Style>

    <Style TargetType="{x:Type xcad:LayoutAnchorControl}">
        <Setter Property="Background" Value="{DynamicResource GeneralBackground}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource GeneralBackground}"/>
    </Style>

</ResourceDictionary>